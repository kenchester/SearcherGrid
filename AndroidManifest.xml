<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.incra.searchergrid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.incra.searchergrid.InitialActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.incra.searchergrid.SearchListActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.incra.searchergrid.SearchCreateActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.incra.searchergrid.DescriptionActivity"
            android:label="@string/app_name" >
        </activity>   
            
        <activity
		        android:name="com.incra.searchergrid.MapActivity"
		        android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
